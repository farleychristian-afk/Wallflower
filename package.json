{
  "name": "wallflower",
  "version": "1.0.0",
  "description": "Wallflower web application with Express APIs",
  "main": "server.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "nodemon --watch server server/index.js",
    "client": "cd client && npm start",
    "dev:full": "concurrently \"npm run dev\" \"npm run client\"",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:pact": "jest --testPathPattern=pact",
    "test:pact:consumer": "jest --testPathPattern=consumer",
    "test:pact:provider": "node scripts/verify-pact.js",
    "test:integration": "jest --testPathPattern=integration",
    "pact:publish": "echo 'Use Pact CLI or GitHub Action to publish pacts'",
    "pact:verify": "node scripts/verify-pact.js"
  },
  "dependencies": {
    "concurrently": "^9.2.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "openai": "^5.12.2"
  },
  "devDependencies": {
    "@pact-foundation/pact": "^12.1.0",
    "@types/jest": "^29.5.3",
    "axios": "^1.4.0",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.pact.test.js"
    ],
    "collectCoverage": false,
    "collectCoverageFrom": [
      "api/**/*.js",
      "server/**/*.js",
      "server.js",
      "!**/node_modules/**",
      "!**/tests/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    }
  },
  "keywords": [
    "express",
    "api",
    "pact",
    "contract-testing",
    "wallflower"
  ],
  "author": "",
  "license": "MIT"
}
