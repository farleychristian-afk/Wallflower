{
  "name": "wallflower",
  "version": "1.0.0",
  "description": "Wallflower web application with Express APIs",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:pact": "jest --testPathPattern=pact",
    "test:pact:consumer": "jest --testPathPattern=consumer",
    "test:pact:provider": "node scripts/verify-pact.js",
    "pact:publish": "echo 'Use Pact CLI or GitHub Action to publish pacts'",
    "pact:verify": "node scripts/verify-pact.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "jest": "^29.6.2",
    "@pact-foundation/pact": "^12.1.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "@types/jest": "^29.5.3",
    "axios": "^1.4.0"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.pact.test.js"
    ]
  },
  "keywords": [
    "express",
    "api",
    "pact",
    "contract-testing",
    "wallflower"
  ],
  "author": "",
  "license": "MIT"
}
